import java.util.Random;
/**
 * Programme principal avec la m�thode main
 * 
 * @author D�partement TIC - ESIGELEC
 * @version 2.1
 */
public class SimulateurAppX {

	public static void main(String[] args) {
		// cr�ation de l'environnement et r�cup�ration du terrain
		Terrain terrain = Environnement.creerEnvironnement(10, 10);

		// cr�ation du robot
		Robot robot = new Robot(0, 0, "sud");
		robot.setVitesse(15);
		// ajout du robot sur le terrain
		terrain.ajouterRobot(robot);
		// mise � jour des composants graphiques
		terrain.updateIHM();
		// ajouter les victimes

		Random Victime = new Random();
		int nbvictime=Victime.nextInt(6)+1;
		terrain.ajouterNombreDeVictimes(nbvictime);
		
		// ajouter ici le code de d�placement du robot

		int a;
		a = 1;
		for (int j = 0 ; j <= 3 ; j=j+1) {
			for (int i = 0; i <= 8; i = i + 1)
				robot.avancer();
			robot.tournerGauche();
			robot.avancer();
			robot.tournerGauche();
			for (int i = 0; i <= 8; i = i + 1)
				robot.avancer();
			robot.tournerDroite();
			robot.avancer();
			robot.tournerDroite();
		}
		for (int i = 0; i <= 8; i = i + 1)
			robot.avancer();
		robot.tournerGauche();
		robot.avancer();
		robot.tournerGauche();
		for (int i = 0; i <= 8; i = i + 1)
			robot.avancer();
		boolean aze;
		aze=false;
		while (a <=6) {
			aze=robot.isSurVictime();
			if (aze = true) {
				robot.detecterGravite();
				
			}
		}
	}

}
